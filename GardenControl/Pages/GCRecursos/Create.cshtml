@page
@model GardenControl.Pages.GCRecursos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Recurso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recurso.Nombre" class="control-label"></label>
                <input asp-for="Recurso.Nombre" class="form-control" />
                <span asp-validation-for="Recurso.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recurso.Descripcion" class="control-label"></label>
                <input asp-for="Recurso.Descripcion" class="form-control" />
                <span asp-validation-for="Recurso.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recurso.FechaCreacion" class="control-label"></label>
                <input asp-for="Recurso.FechaCreacion" class="form-control" />
                <span asp-validation-for="Recurso.FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recurso.Orden" class="control-label"></label>
                <input asp-for="Recurso.Orden" class="form-control" />
                <span asp-validation-for="Recurso.Orden" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Recurso.Activo" /> @Html.DisplayNameFor(model => model.Recurso.Activo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Recurso.LeccionId" class="control-label"></label>
                <select asp-for="Recurso.LeccionId" class ="form-control" asp-items="ViewBag.LeccionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
